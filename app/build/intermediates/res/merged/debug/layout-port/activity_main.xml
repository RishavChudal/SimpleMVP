<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@android:color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/activity_main_iv"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/activity_main_tv"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@android:drawable/ic_menu_gallery"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/activity_main_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/EmeraldGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >

        <Button
            android:id="@+id/activity_main_btn_clouds"
            android:layout_above="@+id/activity_main_btn_sea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="@string/clouds"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:id="@+id/activity_main_btn_sea"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:text="@string/sea"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:id="@+id/activity_main_btn_mountain"
            android:layout_below="@+id/activity_main_btn_sea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/mountain"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"/>

    </RelativeLayout>

</LinearLayout>