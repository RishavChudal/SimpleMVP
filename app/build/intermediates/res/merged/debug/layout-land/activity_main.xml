<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:padding="16dp">

   <RelativeLayout
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="1.2">

       <ImageView
           android:id="@+id/activity_main_iv"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_above="@+id/activity_main_tv"
           android:background="@android:drawable/ic_menu_gallery"
           android:scaleType="fitXY" />

       <TextView
           android:id="@+id/activity_main_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:background="@color/EmeraldGreen"
           android:gravity="center"
           android:textSize="25sp"
           android:textColor="@android:color/white"/>
   </RelativeLayout>

    <View
        android:id="@+id/activity_main_view"
        android:layout_marginStart="20dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>


    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <Button
            android:id="@+id/activity_main_btn_clouds"
            android:layout_above="@+id/activity_main_btn_sea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="@string/clouds"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:id="@+id/activity_main_btn_sea"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:text="@string/sea"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:id="@+id/activity_main_btn_mountain"
            android:layout_below="@id/activity_main_btn_sea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/mountain"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"/>
    </RelativeLayout>

</LinearLayout>